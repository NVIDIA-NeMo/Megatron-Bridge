{
    "categories": [
      {
        "title": "## Bridge & Integration\n\n",
        "labels": ["bridge", "integration", "conversion", "compatibility"],
        "exclude_labels": ["ignore"]
      },
      {
        "title": "\n## Megatron-Core\n\n",
        "labels": ["megatron-core", "mcore", "tensor-parallel", "pipeline-parallel"],
        "exclude_labels": ["ignore"]
      },
      {
        "title": "\n## NeMo Integration\n\n",
        "labels": ["nemo", "nemo2", "checkpoint"],
        "exclude_labels": ["ignore"]
      },
      {
        "title": "\n## Training & Distributed\n\n",
        "labels": ["training", "distributed", "parallelism"],
        "exclude_labels": ["ignore"]
      },
      {
        "title": "\n## Models & Tokenizers\n\n",
        "labels": ["model", "tokenizer", "architecture"],
        "exclude_labels": ["ignore"]
      },
      {
        "title": "\n## Documentation\n\n",
        "labels": ["docs", "documentation"],
        "exclude_labels": ["ignore"]
      },
      {
        "title": "\n## CI/CD\n\n",
        "labels": ["ci", "github-actions", "workflow", "testing"],
        "exclude_labels": ["ignore"]
      },
      {
        "title": "\n## Bug Fixes\n\n",
        "labels": ["bug", "bugfix", "fix"],
        "exclude_labels": ["ignore"]
      }
    ],
    "ignore_labels": [
      "ignore",
      "skip-changelog"
    ],
    "sort": "ASC",
    "template": "\n${{CHANGELOG}}\n## Others\n\n${{UNCATEGORIZED}}\n",
    "pr_template": "- ${{TITLE}} [#${{NUMBER}}](${{URL}})",
    "empty_template": "- No changes in this release",
    "label_extractor": [
      {
        "pattern": "(.*bridge.*)|(.*integrat.*)|(.*conver.*)|(.*compatib.*)|(.*compat.*)",
        "target": "bridge",
        "flags": "gimu",
        "on_property": ["title", "body"]
      },
      {
        "pattern": "(.*megatron.*)|(.*mcore.*)|(.*tensor.*parallel.*)|(.*pipeline.*parallel.*)|(.*tp.*)|(.*pp.*)",
        "target": "megatron-core",
        "flags": "gimu",
        "on_property": ["title", "body"]
      },
      {
        "pattern": "(.*nemo.*)|(.*nemo2.*)|(.*checkpoint.*)|(.*ckpt.*)",
        "target": "nemo",
        "flags": "gimu",
        "on_property": ["title", "body"]
      },
      {
        "pattern": "(.*train.*)|(.*distribut.*)|(.*parallel.*)|(.*ddp.*)|(.*fsdp.*)",
        "target": "training",
        "flags": "gimu",
        "on_property": ["title", "body"]
      },
      {
        "pattern": "(.*model.*)|(.*tokeniz.*)|(.*architecture.*)|(.*gpt.*)|(.*llama.*)",
        "target": "model",
        "flags": "gimu",
        "on_property": ["title", "body"]
      },
      {
        "pattern": "(.*doc.*)|(.*readme.*)|(.*guide.*)|(.*tutorial.*)",
        "target": "docs",
        "flags": "gimu",
        "on_property": ["title", "body"]
      },
      {
        "pattern": "(.*\\bci\\b.*)|(.*github.*)|(.*workflow.*)|(.*action.*)|(.*test.*)",
        "target": "ci",
        "flags": "gimu",
        "on_property": ["title", "body"]
      },
      {
        "pattern": "(.*\\[bug.*)|(.*\\bfix\\b.*)|(.*bugfix.*)|(.*patch.*)",
        "target": "bug",
        "flags": "gimu",
        "on_property": ["title", "body"]
      }
    ],
    "duplicate_filter": {
      "pattern": ".+",
      "on_property": "title",
      "method": "match"
    },
    "transformers": [
    ],
    "max_tags_to_fetch": 100,
    "max_pull_requests": 500,
    "max_back_track_time_days": 365,
    "exclude_merge_branches": [
    ],
    "tag_resolver": {
      "method": "semver"
    }
}

