FROM nvcr.io/nvidia/pytorch:25.05-py3

ENV PIP_CONSTRAINT=""

# Install all
WORKDIR /workspace
RUN --mount=type=bind,source=pyproject.toml,target=/workspace/pyproject.toml \
    --mount=type=bind,source=nemo_lm/__init__.py,target=/workspace/nemo_lm/__init__.py \
    --mount=type=bind,source=nemo_lm/package_info.py,target=/workspace/nemo_lm/package_info.py \
    --mount=type=bind,source=README.md,target=/workspace/README.md \
    pip install --no-build-isolation --no-cache-dir '.[all]'

# Install development versions
ARG MCORE_COMMIT=9eebd5173cbd6dea5e6a324d418b669ac000989e
ARG NEMO_RUN_COMMIT=main

RUN pip install --no-cache-dir --upgrade --force-reinstall --no-deps \
    git+https://github.com/NVIDIA/Megatron-LM.git@${MCORE_COMMIT} \
    git+https://github.com/NVIDIA/NeMo-RUN.git@${NEMO_RUN_COMMIT}

RUN --mount=type=secret,id=GH_TOKEN \
    export PAT=$(cat /run/secrets/GH_TOKEN) && \
    echo -e "machine github.com\n  login token\n  password $PAT" > ~/.netrc && chmod 600 ~/.netrc && \
    pip install --no-cache-dir git+https://github.com/NVIDIA-NeMo/NeMo-Export-Deploy.git@main && \
    rm ~/.netrc



