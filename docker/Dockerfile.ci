FROM nvcr.io/nvidia/pytorch:25.05-py3

ENV PIP_CONSTRAINT=""

ARG UV_VERSION=0.7.2
ENV PATH="/root/.local/bin:$PATH"
RUN curl -LsSf https://astral.sh/uv/${UV_VERSION}/install.sh | sh
ENV UV_PROJECT_ENVIRONMENT=/opt/venv
ENV PATH="$UV_PROJECT_ENVIRONMENT/bin:$PATH"
ENV UV_LINK_MODE=copy

# Install all
WORKDIR /workspace

RUN bash -ex <<"EOF"
    uv venv ${UV_PROJECT_ENVIRONMENT} --system-site-packages
    source ${UV_PROJECT_ENVIRONMENT}/bin/activate
EOF

# Copy necessary files for installation
COPY pyproject.toml /workspace/
COPY src /workspace/src
COPY README.md /workspace/
COPY uv.lock /workspace/
RUN --mount=type=secret,id=GH_TOKEN bash -ex <<"EOF"
    PAT=$(cat /run/secrets/GH_TOKEN)
    echo -e "machine github.com\n  login token\n  password $PAT" > ~/.netrc
    chmod 600 ~/.netrc 

    uv sync \
        --link-mode copy \
        --locked
EOF

# Install development versions
ARG MCORE_COMMIT=9eebd5173cbd6dea5e6a324d418b669ac000989e
ARG NEMO_RUN_COMMIT=main
ARG NEMO_EXPORT_DEPLOY_COMMIT=ko3n1g/build/update-lock-file
ARG INSTALL_EVAL=false
RUN --mount=type=secret,id=GH_TOKEN bash -ex <<"EOF"
    PAT=$(cat /run/secrets/GH_TOKEN)
    echo -e "machine github.com\n  login token\n  password $PAT" > ~/.netrc
    chmod 600 ~/.netrc 

    uv pip install --no-cache-dir --upgrade --force-reinstall --no-deps \
        git+https://github.com/NVIDIA/Megatron-LM.git@${MCORE_COMMIT} \
        git+https://github.com/NVIDIA/NeMo-RUN.git@${NEMO_RUN_COMMIT}

    if [ "$INSTALL_EVAL" = "true" ]; then
        uv pip install --no-cache-dir --upgrade --force-reinstall --no-deps \
            "NeMo-Export-Deploy[te,trtllm]@git+https://github.com/NVIDIA-NeMo/NeMo-Export-Deploy.git@${NEMO_EXPORT_DEPLOY_COMMIT}"
    else
        uv pip install --no-cache-dir --upgrade --force-reinstall --no-deps \
            "NeMo-Export-Deploy@git+https://github.com/NVIDIA-NeMo/NeMo-Export-Deploy.git@${NEMO_EXPORT_DEPLOY_COMMIT}"
    fi

    rm ~/.netrc
EOF

